html, body
  font-family: sans-serif
  margin: 0
  padding: 0

a
  text-decoration: none

  &:hover,
  &:focus
    text-decoration: underline

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance: none
  margin: 0

.fixed
  margin-left: auto
  margin-right: auto
  max-width: 800px
  width: 80%

.d-flex
  display: flex

.v-center
  align-items: center

.ml-auto
  margin-left: auto

.items-center
  justify-content: center

.text-center
  text-align: center

// app-specific

.global-head
  transition: all 300ms
  input,
  button
    border: 0
    border-radius: 2px
    font-size: 0.9rem
    line-height: 2rem
    padding: 0 10px
    transition: all 300ms

    &:focus
      outline: none

  input
    margin-right: 10px
    width: 70px

  button
    cursor: pointer

footer
  font-size: 0.8rem
  transition: all 300ms

// layout
.weather-app
  display: flex
  flex-direction: column
  min-height: 100vh
  transition: all 300ms

.app-body
  flex: 1

  .fa
    font-size: 4.5rem

.app-body-content
  align-items: baseline

  .wi
    font-size: 4rem
    margin-right: 15px


  h3
    font-size: 2rem
    margin: 0

// colors
tempcolor($name, $bg, $c, $a)
  .temp-{$name}
    background-color: $bg
    color: $c
    .global-head
      background-color: darken($bg, 20%)

      input,
      button
        background-color $bg
        color: $c

        &:focus
          box-shadow: 0 0 0 4px lighten($bg, 5%)

      input:focus
        background-color: #fff
        color: #444

      button:hover
        background-color: lighten($bg, 20%)

    footer
      color: blend(rgba($c, 0.6), $bg)
    a
      color: blend(rgba($a, 0.6), $bg)
      &:hover
        color: #fff

